{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/login",
        "destination": "/index.html"
      },
      {
        "source": "/home",
        "destination": "/dashboard.html"
      },
      {
        "source": "/register",
        "destination": "/register.html"
      },
      {
        "source": "/settings",
        "destination": "/configuracion.html"
      },
      {
        "source": "/info",
        "destination": "/datos.html"
      },
      {
        "source": "/employees",
        "destination": "/employees.html"
      },
      {
        "source": "/productos",
        "destination": "/productos.html"
      },
      {
        "source": "/suplidores",
        "destination": "/suplidores.html"
      },
      {
        "source": "/facturar",
        "destination": "/facturar.html"
      },
      {
        "source": "/pacientes",
        "destination": "/pacientes.html"
      },
      {
        "source": "/solicitudes",
        "destination": "/solicitudes.html"
      },
      {
        "source": "/almacen",
        "destination": "/almacen.html"
      },
      {
        "source": "/agendar",
        "destination": "/agendar.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ]
}
